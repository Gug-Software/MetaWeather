<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/weather_future_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_s"
        android:padding="@dimen/padding_s"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardCornerRadius="@dimen/radius_m"
        app:cardElevation="@dimen/elevation_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_m"
            android:paddingVertical="@dimen/padding_s">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textAppearance="?textAppearanceOverline"
                android:textColor="@color/primaryTextColor_medium"
                tools:text="Wind" />

            <ImageView
                android:id="@+id/image_weather"
                android:layout_width="@dimen/weather_future_icon_size"
                android:layout_height="@dimen/weather_future_icon_size"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_s"
                android:padding="@dimen/padding_xs"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_s"
                android:textAppearance="?textAppearanceSubtitle2"
                android:textColor="@color/primaryTextColor_high"
                tools:text="36" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>